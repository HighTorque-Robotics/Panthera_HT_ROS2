<launch>
  <!-- Start Gazebo with robot -->
  <include file="$(find-pkg-share gripper_gazebo)/launch/gazebo.launch.xml" />

  <!-- Start MoveIt move_group -->
  <include file="$(find-pkg-share with_gripper_config)/launch/move_group.launch.py">
    <arg name="use_sim_time" value="true" />
  </include>

  <!-- Start RViz with MoveIt -->
  <include file="$(find-pkg-share with_gripper_config)/launch/moveit_rviz.launch.py">
    <arg name="use_sim_time" value="true" />
  </include>

</launch>
